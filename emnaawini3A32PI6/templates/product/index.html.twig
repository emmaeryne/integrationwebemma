{% extends 'base-front.html.twig' %}

{% block title %}Nos produits
{% endblock %}

{% block content %}


	<div class="example-wrapper">
		<h1>Les produits</h1>


		<section style="background-color: #eee;">
			<div class="container py-5">
				<div class="row">
					<div class="col-md-3">
						</div>
						<div class="col-md-12">
							<div class="row">
								{% for product in products %}
									<div class="col-md-12 col-lg-4 mb-4 mb-lg-0">
										<a href="{{path('app_product',{'id':product.id})}}">
											<div class="card mb-4">
												<div class="d-flex justify-content-between p-3">
													<p class="lead mb-0">{{product.nomProduit}}</p>

												</div>
												{# <img src="uploads/images/{{product.image}}" class="card-img-top" alt="Laptop"/> #}
												<div class="card-body">
													<div class="d-flex justify-content-between">
														<p class="small">
															<a href="#!" class="text-muted">{{product.categorie.nomcategorie}}</a>
														</p>
													</div>

													<div class="d-flex justify-content-between mb-3">
														<h5 class="mb-0">{{product.nomProduit}}</h5>
														<h5 class="text-dark mb-0">{{(product.prix / 100)|number_format(2, ',', '.')}}
															TND</h5>
													</div>

													<div class="d-flex justify-content-between mb-2">
														<p class="text-muted mb-0">Available:
															<span class="fw-bold">6</span>
														</p>
														<div class="ms-auto text-warning">
															<i class="fa fa-star"></i>
															<i class="fa fa-star"></i>
															<i class="fa fa-star"></i>
															<i class="fa fa-star"></i>
															<i class="fa fa-star"></i>
														</div>
													</div>
												</div>
											</div>
										</a>
									</div>
								{% endfor %}
							</div>
						</div>

					</div>
				</div>
			</section>

		</div>
	{% endblock %}
