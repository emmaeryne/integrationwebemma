{# templates/pdf/produits_pdf.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Liste des Produits</title>
    <style>
        body {
            font-family: sans-serif;
            font-size: 12px;
            margin: 40px;
            position: relative;
        }

        .logo-container {
            position: absolute;
            top: 20px;
            left: 20px;
            width: 80px;
        }

        .logo-container img {
            width: 100%;
        }

        .content {
            padding-top: 40px;
            padding-left: 100px;
        }

        h1 {
            text-align: center;
            margin-top: 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 5px;
            text-align: left;
        }
    </style>
</head>
<body>

    <div class="logo-container">
        <img src="file:///C:/Users/moham/gym-project/public/img/logo.png" alt="Logo">
    </div>

    <div class="content">
        <h1>Liste des Produits</h1>

         <table>
        <thead>
            <tr>
                <th style="background-color: #007bff; color: #fff; font-weight: 600;">Nom du produit</th>
                <th style="background-color: #007bff; color: #fff; font-weight: 600;">Catégorie</th>
                <th style="background-color: #007bff; color: #fff; font-weight: 600;">Prix (€)</th>
                <th style="background-color: #007bff; color: #fff; font-weight: 600;">Stock Disponible</th>
                <th style="background-color: #007bff; color: #fff; font-weight: 600;">Date</th>
                <th style="background-color: #007bff; color: #fff; font-weight: 600;">Fournisseur</th>
                
            </tr>
        </thead>
        <tbody>
            {% for produit in produits %}
                <tr style="background-color: {{ loop.index is even ? '#f9f9f9' : '#ffffff' }};">
                    <td>{{ produit.NomProduit }}</td>
                    <td>{{ produit.categorie ? produit.categorie.nomcategorie : 'Non défini' }}</td>
                    <td>{{ produit.Prix|number_format(2, '.', ' ') }}</td>
                    <td>{{ produit.StockDispo }}</td>
                    <td>{{ produit.Date|date('d/m/Y') }}</td>
                    <td>{{ produit.Fournisseur }}</td>
                    
                    
                </tr>
            {% else %}
                <tr>
                    <td colspan="8" style="text-align: center;">Aucun produit trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>