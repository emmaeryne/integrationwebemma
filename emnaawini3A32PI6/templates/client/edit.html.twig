                {{ translations.title }}
            </h1>

            {# Messages flash avec macro #}
            {% macro render_flash(type, messages, icon) %}
                {% if messages|length > 0 %}
                    {% for message in messages %}
                        <div class="alert alert-{{ type }} fade show d-flex align-items-center shadow-sm mb-4 rounded-3 animate__animated animate__fadeIn" role="alert" style="background: linear-gradient(135deg, #fff3cd, #ffecd1); color: #856404;">
                            <i class="fas fa-{{ icon }} me-3 fs-5" style="color: #856404;"></i>
                            <span class="fs-5">{{ message }}</span>
                            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endif %}
            {% endmacro %}
            {{ _self.render_flash('success', app.flashes('success'), 'check-circle') }}
            {{ _self.render_flash('danger', app.flashes('error'), 'exclamation-circle') }}

