                           title="{{ translations.cancel }}"
                           aria-label="{{ translations.cancel }}">
                            <i class="fas fa-times"></i>
                            {{ translations.cancel }}
                        </a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </section>
        </div>
    </div>
    <!-- Reservation Form End -->
