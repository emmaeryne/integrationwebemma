                        'attr': {
                            'class': 'row g-4 needs-validation',
                            'novalidate': ''
                        }
                    }) }}

                    {# Macro pour champs de formulaire #}
                    {% macro render_field(field, icon, label, translations) %}
                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(field, {
                                    'attr': {
                                        'class': field.vars.name == 'typeAbonnement' or field.vars.name == 'statut' ? 'form-select' : 'form-control',
                                        'placeholder': translations[label]
                                    }
                                }) }}
                                <label for="{{ field.vars.id }}" class="fw-bold text-muted d-flex align-items-center gap-2" style="color: #856404 !important;">
                                    <i class="fas fa-{{ icon }}" style="color: var(--jaune);"></i>
                                    {{ translations[label] }}
                                </label>
                                {% if field.vars.errors|length > 0 %}
                                    <div class="invalid-feedback d-block" style="color: #d32f2f;">
                                        {{ form_errors(field) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endmacro %}

                    {# Champs du formulaire #}
                    {{ _self.render_field(form.typeAbonnement, 'tag', 'type_abonnement', translations) }}
                    {{ _self.render_field(form.dateDebut, 'calendar-alt', 'date_debut', translations) }}
                    {{ _self.render_field(form.dateFin, 'calendar-alt', 'date_fin', translations) }}
                    {{ _self.render_field(form.statut, 'info-circle', 'statut', translations) }}

                    {# Boutons d'action #}
