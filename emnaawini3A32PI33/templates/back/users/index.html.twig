                <script>
                document.addEventListener('DOMContentLoaded', function() {
                    // Search functionality
                    const searchInput = document.getElementById('searchInput');
                    const userRows = document.querySelectorAll('.user-row');

                    searchInput.addEventListener('input', function() {
                        const searchTerm = this.value.toLowerCase();
                        userRows.forEach(row => {
                            const username = row.querySelector('h6').textContent.toLowerCase();
                            const email = row.querySelector('td:nth-child(2)').textContent.toLowerCase();
                            row.style.display = (username.includes(searchTerm) || email.includes(searchTerm)) ? '' : 'none';
                        });
                    });

                    // Status toggle with animation
                    document.querySelectorAll('.toggle-status').forEach(button => {
                        button.addEventListener('click', function() {
                            const userId = this.getAttribute('data-id');
                            const button = this;
                            
                            button.classList.add('disabled');
                            
                            fetch(`/admin/toggle-user-status/${userId}`, {
                                method: 'POST',
                                headers: {
                                    'X-Requested-With': 'XMLHttpRequest'
                                }
                            })
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    const badge = document.querySelector(`.status-badge-${userId}`);
                                    const icon = button.querySelector('i');
                                    
                                    // Animate status change
                                    badge.style.transition = 'all 0.3s ease';
                                    button.style.transition = 'all 0.3s ease';
                                    
                                    // Update UI elements
                                    updateUIElements(button, badge, icon, data.newStatus);
                                }
                            })
                            .catch(error => console.error('Error:', error))
                            .finally(() => button.classList.remove('disabled'));
                        });
                    });

                    function updateUIElements(button, badge, icon, newStatus) {
                        // Update button
                        button.textContent = newStatus ? ' Disable' : ' Enable';
                        button.classList.toggle('btn-soft-success');
                        button.classList.toggle('btn-soft-danger');
                        
                        // Update badge
                        badge.className = `status-badge-${button.dataset.id} badge rounded-pill bg-${newStatus ? 'success' : 'danger'} bg-opacity-10 text-${newStatus ? 'success' : 'danger'} px-3 py-2`;
                        badge.innerHTML = `<i class="bx ${newStatus ? 'bx-check' : 'bx-x'} me-1"></i>${newStatus ? 'Active' : 'Inactive'}`;
                        
                        // Update icon
                        icon.className = `bx ${newStatus ? 'bx-power-off' : 'bx-power-on'} me-1`;
                        button.prepend(icon);
                    }
                });
                </script>
