                            <a class="btn btn-square rounded-circle me-2 animate__animated animate__pulse animate__infinite" href="#">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a class="btn btn-square rounded-circle me-2 animate__animated animate__pulse animate__infinite" href="#">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                            <a class="btn btn-square rounded-circle me-2 animate__animated animate__pulse animate__infinite" href="#">
                                <i class="fab fa-instagram"></i>
                            </a>
