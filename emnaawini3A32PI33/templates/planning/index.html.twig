{% extends 'base.html.twig' %}

{% block title %}{{ 'Mes Plannings'|trans|default('Mes Plannings') }}{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;500;600;700&family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="{{ asset('lib/flaticon/font/flaticon.css') }}" rel="stylesheet">
    <link href="{{ asset('lib/owlcarousel/assets/owl.carousel.min.css') }}" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
    <style>
        :root {
            --bleu-vif: #00BFFF;
            --bleu: #1E90FF;
            --bleu-fonce: #0A4D68;
            --bleu-clair: #E6F0FA;
            --bleu-moyen: #4682B4;
            --gris: #2A2A2A;
            --jaune: #FFD700;
            --shadow: 0 10px 30px rgba(30, 144, 255, 0.2);
            --shadow-dark: 0 8px 20px rgba(10, 77, 104, 0.3);
        }
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
            color: var(--gris);
            line-height: 1.6;
            margin: 0;
            padding: 0;
        }
        .bg-dark {
            background: var(--bleu-fonce) !important;
            box-shadow: var(--shadow-dark);
            transition: background 0.3s ease;
        }
        .bg-secondary {
            background: var(--bleu-clair) !important;
            color: var(--bleu-fonce);
            border-bottom: 1px solid rgba(70, 130, 180, 0.2);
        }
        .navbar-brand {
            display: flex;
            align-items: center;
            transition: transform 0.3s ease, filter 0.3s ease;
        }
        .navbar-brand:hover {
            transform: scale(1.05);
            filter: brightness(1.1);
        }
        .navbar-brand h1 {
            color: var(--bleu-vif);
            font-family: 'Oswald', sans-serif;
            font-weight: 700;
            font-size: 2.5rem;
            letter-spacing: 3px;
            text-transform: uppercase;
            text-shadow: 2px 2px 6px rgba(0, 191, 255, 0.4);
            margin: 0;
        }
        .navbar-brand img {
            max-height: 80px;
            margin-right: 15px;
            filter: drop-shadow(0 0 8px var(--bleu-vif));
            transition: transform 0.3s ease;
        }
        .navbar-brand:hover img {
            transform: rotate(5deg);
        }
        .nav-link {
            color: var(--bleu-clair) !important;
            font-family: 'Poppins', sans-serif;
            font-weight: 500;
            font-size: 1.1rem;
            padding: 10px 15px;
            transition: color 0.3s ease, background 0.3s ease;
        }
        .nav-link:hover, .nav-link.active {
            color: var(--bleu-vif) !important;
            background: rgba(0, 191, 255, 0.1);
            border-radius: 5px;
        }
        .dropdown-menu {
            background: var(--bleu-fonce);
            border: none;
            box-shadow: var(--shadow-dark);
        }
        .dropdown-item {
            color: var(--bleu-clair);
            font-weight: 400;
            transition: background 0.3s ease, color 0.3s ease;
        }
        .dropdown-item:hover {
            background: var(--bleu);
            color: #fff;
        }
        .dropdown-menu .dropdown-menu {
            top: 0;
            left: 100%;
            margin-left: 0.1rem;
            background: var(--bleu-fonce);
            box-shadow: var(--shadow-dark);
        }
        .dropdown-menu .dropdown:hover > .dropdown-menu {
            display: block;
        }
        .btn-primary {
            background: var(--bleu);
            border: none;
            padding: 12px 30px;
            font-family: 'Oswald', sans-serif;
            font-weight: 600;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            color: #fff;
            border-radius: 8px;
            transition: all 0.3s ease;
            box-shadow: var(--shadow);
        }
        .btn-primary:hover {
            background: var(--bleu-vif);
            transform: translateY(-3px);
            box-shadow: 0 12px 25px rgba(0, 191, 255, 0.4);
        }
        .btn-secondary {
            background: var(--gris);
            border: none;
            padding: 12px 30px;
            font-family: 'Oswald', sans-serif;
            font-weight: 600;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            color: #fff;
            border-radius: 8px;
            transition: all 0.3s ease;
            box-shadow: var(--shadow);
        }
        .btn-secondary:hover {
            background: #3a3a3a;
            transform: translateY(-3px);
            box-shadow: 0 12px 25px rgba(42, 42, 42, 0.4);
        }
        .btn-warning {
            background: #FFD700;
            border: none;
            padding: 8px 20px;
            font-family: 'Oswald', sans-serif;
            font-weight: 500;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--gris);
            border-radius: 8px;
            transition: all 0.3s ease;
            box-shadow: var(--shadow);
        }
        .btn-warning:hover {
            background: #FFC107;
            transform: translateY(-3px);
            box-shadow: 0 12px 25px rgba(255, 193, 7, 0.4);
        }
        .btn-danger {
            background: #dc3545;
            border: none;
            padding: 8px 20px;
            font-family: 'Oswald', sans-serif;
            font-weight: 500;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #fff;
            border-radius: 8px;
            transition: all 0.3s ease;
            box-shadow: var(--shadow);
        }
        .btn-danger:hover {
            background: #c82333;
            transform: translateY(-3px);
            box-shadow: 0 12px 25px rgba(220, 53, 69, 0.4);
        }
        .btn-info {
            background: var(--bleu-moyen);
            border: none;
            padding: 8px 20px;
            font-family: 'Oswald', sans-serif;
            font-weight: 500;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #fff;
            border-radius: 8px;
            transition: all 0.3s ease;
            box-shadow: var(--shadow);
        }
        .btn-info:hover {
            background: var(--bleu-vif);
            transform: translateY(-3px);
            box-shadow: 0 12px 25px rgba(0, 191, 255, 0.4);
        }
        .btn-square {
            background: var(--bleu-clair);
            color: var(--bleu-fonce);
            width: 40px;
            height: 40px;
            line-height: 40px;
            border-radius: 50%;
            transition: all 0.3s ease;
            box-shadow: var(--shadow);
        }
        .btn-square:hover {
            background: var(--bleu-vif);
            color: #fff;
            transform: scale(1.1);
            box-shadow: 0 8px 15px rgba(0, 191, 255, 0.4);
        }
        .bg-secondary h6 {
            font-family: 'Poppins', sans-serif;
            font-weight: 400;
            font-size: 0.95rem;
            margin: 0;
        }
        .bg-secondary i {
            color: var(--bleu-vif);
            font-size: 1.2rem;
            margin-right: 8px;
            transition: transform 0.3s ease;
        }
        .bg-secondary div:hover i {
            transform: scale(1.2);
        }
        .container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 1.5rem;
            padding: 2rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            margin-bottom: 2rem;
        }
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: var(--shadow);
            transition: transform 0.3s ease;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 25px rgba(0, 191, 255, 0.4);
        }
        .card-header {
            background: var(--bleu);
            font-family: 'Oswald', sans-serif;
            font-weight: 600;
            font-size: 1.5rem;
            letter-spacing: 1px;
            color: var(--bleu-clair);
        }
        .table {
            background: #fff;
            border-radius: 8px;
        }
        .table thead th {
            background: var(--bleu-clair);
            color: var(--bleu-fonce);
            font-family: 'Oswald', sans-serif;
            font-weight: 500;
            font-size: 1.1rem;
        }
        .table td {
            font-family: 'Poppins', sans-serif;
            font-size: 1rem;
            color: var(--gris);
        }
        .alert {
            border-radius: 8px;
            box-shadow: var(--shadow);
        }
        .alert-success {
            background: #d4edda;
            color: #155724;
        }
        .alert-info {
            background: #d1ecf1;
            color: #0c5460;
        }
        .alert-danger {
            background: #f8d7da;
            color: #721c24;
        }
        .badge {
            font-family: 'Poppins', sans-serif;
            font-weight: 500;
            padding: 6px 12px;
            border-radius: 5px;
        }
        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(60px); }
            to { opacity: 1; transform: translateY(0); }
        }
        @keyframes fadeInDown {
            from { opacity: 0; transform: translateY(-60px); }
            to { opacity: 1; transform: translateY(0); }
        }
        @media (max-width: 991px) {
            .navbar-brand h1 {
                font-size: 2rem;
            }
            .navbar-brand img {
                max-height: 60px;
            }
            .nav-link {
                font-size: 1rem;
                padding: 8px 12px;
            }
            .carousel-caption h1 {
                font-size: 2.5rem;
            }
            .carousel-caption h5 {
                font-size: 1.2rem;
            }
            .btn-primary, .btn-secondary, .btn-warning, .btn-danger, .btn-info {
                padding: 10px 20px;
                font-size: 0.9rem;
            }
            .dropdown-menu .dropdown-menu {
                left: 0;
                margin-left: 0;
            }
            .card-header {
                font-size: 1.3rem;
            }
            .table th, .table td {
                font-size: 0.9rem;
            }
        }
        @media (max-width: 576px) {
            .carousel-caption {
                padding: 15px 25px;
            }
            .carousel-caption h1 {
                font-size: 1.8rem;
            }
            .carousel-caption h5 {
                font-size: 1rem;
            }
            .container {
                padding: 1rem;
            }
            .btn {
                font-size: 0.8rem;
                padding: 8px 16px;
            }
            .table th, .table td {
                font-size: 0.8rem;
            }
            .d-flex {
                flex-direction: column;
                gap: 0.5rem !important;
            }
        }
    </style>
{% endblock %}

