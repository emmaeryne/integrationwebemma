                                    <button class="btn btn-primary btn-sm mt-2" onclick="envoyerAvis({{ produit.id }})">
                                        <i class="fas fa-paper-plane me-1"></i> {{ 'Envoyer'|trans|default('Envoyer') }}
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr id="avis-row-{{ produit.id }}" style="display: none;">
                            <td colspan="4">
                                <div class="avis-list" id="avis-list-{{ produit.id }}"></div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center">{{ 'Aucun produit trouvé'|trans|default('Aucun produit trouvé') }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ asset('lib/easing/easing.min.js') }}"></script>
    <script src="{{ asset('lib/waypoints/waypoints.min.js') }}"></script>
    <script src="{{ asset('lib/counterup/counterup.min.js') }}"></script>
    <script src="{{ asset('lib/owlcarousel/owl.carousel.min.js') }}"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Template JavaScript -->
    <script src="{{ asset('js/main.js') }}"></script>

    <!-- Custom JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.nav-link').forEach(link => {
                link.addEventListener('click', function(e) {
                    if (this.getAttribute('href').startsWith('#')) {
                        e.preventDefault();
                        const target = document.querySelector(this.getAttribute('href'));
                        target.scrollIntoView({ behavior: 'smooth' });
                    }
                });
            });

            $('[data-bs-toggle="tooltip"]').tooltip();
        });

        function toggleForm(produitId) {
            const formRow = document.getElementById(`form-row-${produitId}`);
            const avisRow = document.getElementById(`avis-row-${produitId}`);
            const avisContainer = document.getElementById(`avis-list-${produitId}`);

            if (avisRow.style.display === 'table-row') {
                avisRow.style.display = 'none';
                avisContainer.innerHTML = '';
            }

            formRow.style.display = (formRow.style.display === 'none' || !formRow.style.display) ? 'table-row' : 'none';
        }

        function envoyerAvis(produitId) {
            const auteur = document.getElementById(`auteur-${produitId}`).value.trim();
            const commentaire = document.getElementById(`commentaire-${produitId}`).value.trim();
            const note = parseInt(document.getElementById(`note-${produitId}`).value.trim());

            if (!auteur || !commentaire || isNaN(note) || note < 1 || note > 5) {
                Swal.fire({
                    title: '{{ 'Erreur'|trans|default('Erreur') }}',
                    text: '{{ 'Merci de remplir correctement tous les champs avec une note valide entre 1 et 5.'|trans|default('Merci de remplir correctement tous les champs avec une note valide entre 1 et 5.') }}',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
                return;
            }

            fetch('/avis/new', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ auteur, commentaire, note, produitId })
            })
            .then(response => response.json())
            .then(data => {
                document.getElementById(`auteur-${produitId}`).value = '';
                document.getElementById(`commentaire-${produitId}`).value = '';
                document.getElementById(`note-${produitId}`).value = '';
                document.getElementById(`form-row-${produitId}`).style.display = 'none';

                const avisRow = document.getElementById(`avis-row-${produitId}`);
                if (avisRow.style.display === 'table-row') {
                    voirAvis(produitId, document.getElementById(`voir-${produitId}`));
                }
            })
            .catch(err => {
                console.error('Erreur lors de l\'envoi de l\'avis :', err);
                Swal.fire({
                    title: '{{ 'Erreur'|trans|default('Erreur') }}',
                    text: '{{ 'Une erreur est survenue lors de l\'envoi de votre avis. Merci de réessayer.'|trans|default('Une erreur est survenue lors de l\'envoi de votre avis. Merci de réessayer.') }}',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            });
        }

        function voirAvis(produitId, btn) {
            const formRow = document.getElementById(`form-row-${produitId}`);
            const avisRow = document.getElementById(`avis-row-${produitId}`);
            const avisContainer = document.getElementById(`avis-list-${produitId}`);

            if (formRow.style.display === 'table-row') {
                formRow.style.display = 'none';
            }

            if (avisRow.style.display === 'table-row') {
                avisRow.style.display = 'none';
                avisContainer.innerHTML = '';
                return;
            }

            fetch(`/avis/produit/${produitId}`)
                .then(res => res.json())
                .then(data => {
                    avisContainer.innerHTML = '';
                    if (!data || data.length === 0) {
                        avisContainer.innerHTML = '<em>{{ 'Aucun avis pour ce produit.'|trans|default('Aucun avis pour ce produit.') }}</em>';
                    } else {
                        data.forEach(avis => {
                            avisContainer.innerHTML += `
                                <div class="avis-card" id="avis-${avis.id}">
                                    <div class="avatar-circle">
                                        ${avis.auteur.charAt(0).toUpperCase()}
                                    </div>
                                    <div class="avis-details" id="avis-content-${avis.id}">
                                        <div><strong>${avis.auteur}</strong></div>
                                        <div>"${avis.commentaire}"</div>
                                        <small>{{ 'Note'|trans|default('Note') }} : ${avis.note}/5</small>
                                        <div class="mt-2 d-flex gap-2">
                                            <button class="btn btn-warning btn-sm" onclick="editAvis(${avis.id}, ${produitId}, '${avis.auteur}', \`${avis.commentaire}\`, ${avis.note})">
                                                <i class="fas fa-edit me-1"></i> {{ 'Modifier'|trans|default('Modifier') }}
                                            </button>
                                            <button class="btn btn-danger btn-sm" onclick="supprimerAvis(${avis.id}, ${produitId})">
                                                <i class="fas fa-trash me-1"></i> {{ 'Supprimer'|trans|default('Supprimer') }}
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            `;
                        });
                    }
                    avisRow.style.display = 'table-row';
                })
                .catch(err => console.error('Erreur lors du chargement des avis :', err));
        }

        function editAvis(avisId, produitId, auteur, commentaire, note) {
            const container = document.getElementById(`avis-content-${avisId}`);
            container.innerHTML = `
                <input type="text" id="edit-auteur-${avisId}" class="form-control mb-1" value="${auteur}">
                <textarea id="edit-commentaire-${avisId}" class="form-control mb-1">${commentaire}</textarea>
                <input type="number" id="edit-note-${avisId}" class="form-control mb-1" min="1" max="5" value="${note}">
                <div class="d-flex gap-2">
                    <button class="btn btn-primary btn-sm" onclick="validerEditionAvis(${avisId}, ${produitId})">
                        <i class="fas fa-check me-1"></i> {{ 'Valider'|trans|default('Valider') }}
                    </button>
                    <button class="btn btn-secondary btn-sm" onclick="voirAvis(${produitId}, document.getElementById('voir-${produitId}'))">
                        <i class="fas fa-times me-1"></i> {{ 'Annuler'|trans|default('Annuler') }}
                    </button>
                </div>
            `;
        }

        function validerEditionAvis(avisId, produitId) {
            const auteur = document.getElementById(`edit-auteur-${avisId}`).value.trim();
            const commentaire = document.getElementById(`edit-commentaire-${avisId}`).value.trim();
            const note = parseInt(document.getElementById(`edit-note-${avisId}`).value.trim());

            if (!auteur || !commentaire || isNaN(note) || note < 1 || note > 5) {
                Swal.fire({
                    title: '{{ 'Erreur'|trans|default('Erreur') }}',
                    text: '{{ 'Merci de remplir correctement tous les champs avec une note valide entre 1 et 5.'|trans|default('Merci de remplir correctement tous les champs avec une note valide entre 1 et 5.') }}',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
                return;
            }

            fetch(`/avis/${avisId}/edit`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ auteur, commentaire, note })
            })
            .then(response => response.json())
            .then(data => {
                Swal.fire({
                    title: '{{ 'Succès'|trans|default('Succès') }}',
                    text: '{{ 'L\'avis a été modifié avec succès.'|trans|default('L\'avis a été modifié avec succès.') }}',
                    icon: 'success',
                    confirmButtonText: 'OK'
                });
                voirAvis(produitId, document.getElementById(`voir-${produitId}`));
            })
            .catch(err => {
                console.error("Erreur lors de la modification de l'avis : ", err);
                Swal.fire({
                    title: '{{ 'Erreur'|trans|default('Erreur') }}',
                    text: '{{ 'Une erreur est survenue lors de la modification de l\'avis. Merci de réessayer.'|trans|default('Une erreur est survenue lors de la modification de l\'avis. Merci de réessayer.') }}',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            });
        }

        function supprimerAvis(avisId, produitId) {
            Swal.fire({
                title: '{{ 'Supprimer cet avis?'|trans|default('Supprimer cet avis?') }}',
                text: '{{ 'Voulez-vous vraiment supprimer cet avis ?'|trans|default('Voulez-vous vraiment supprimer cet avis ?') }}',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: '{{ 'Supprimer'|trans|default('Supprimer') }}',
                cancelButtonText: '{{ 'Annuler'|trans|default('Annuler') }}'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/avis/${avisId}`, { method: 'DELETE' })
                        .then(response => {
                            Swal.fire({
                                title: '{{ 'Supprimé'|trans|default('Supprimé') }}',
                                text: '{{ 'L\'avis a été supprimé.'|trans|default('L\'avis a été supprimé.') }}',
                                icon: 'success',
                                confirmButtonText: 'OK'
                            });
                            voirAvis(produitId, document.getElementById(`voir-${produitId}`));
                        })
                        .catch(err => {
                            console.error("Erreur lors de la suppression : ", err);
                            Swal.fire({
                                title: '{{ 'Erreur'|trans|default('Erreur') }}',
                                text: '{{ 'Une erreur est survenue lors de la suppression de l\'avis. Merci de réessayer.'|trans|default('Une erreur est survenue lors de la suppression de l\'avis. Merci de réessayer.') }}',
                                icon: 'error',
                                confirmButtonText: 'OK'
                            });
                        });
                }
            });
        }
    </script>
</body>
</html>