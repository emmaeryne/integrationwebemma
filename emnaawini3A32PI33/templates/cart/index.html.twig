{% extends 'base-front.html.twig' %}

{% block title %}Mon panier!{% endblock %}

{% block content %}
    <div class="px-4 px-lg-0">
        <!-- For demo purpose -->
        <div class="container py-2 text-center">
            <h1 class="display-4">Mon Panier</h1>
            <p class="text-center">
                <i class="text-info font-weight-bold">{{ fullCarts|length }}</i>
                produit(s) dans votre panier
            </p>
        </div>
        <!-- End -->

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <div class="pb-5">
            <div class="container">
                {% if fullCarts|length > 0 %}
                    <div class="row">
                        <div class="col-lg-12 bg-white rounded shadow-sm mb-5">
                            <!-- Shopping cart table -->
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col" class="border-0 bg-light">
                                                <div class="p-2 px-3 text-uppercase">Produit</div>
                                            </th>
                                            <th scope="col" class="border-0 bg-light">
                                                <div class="py-2 text-uppercase">Prix</div>
                                            </th>
                                            <th scope="col" class="border-0 bg-light">
                                                <div class="py-2 text-uppercase">Quantité</div>
                                            </th>
                                            <th scope="col" class="border-0 bg-light">
                                                <div class="py-2 text-uppercase">Total</div>
                                            </th>
                                            <th scope="col" class="border-0 bg-light">
                                                <div class="py-2 text-uppercase">Supprimer</div>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% set total = 0 %}
                                        {% for cart in fullCarts %}
                                            <tr>
                                                <th scope="row" class="border-0">
                                                    <div class="p-2">
                                                        <div class="ml-3 d-inline-block align-middle">
                                                            <h5 class="mb-0">
                                                                <a href="#" class="text-dark d-inline-block align-middle">{{ cart.product.nomProduit }}</a>
                                                            </h5>
                                                            <span class="text-muted font-weight-normal font-italic d-block">
                                                                Catégorie: {{ cart.product.categorie.nomcategorie }}
                                                            </span>
                                                            <span class="text-muted font-weight-normal font-italic d-block">
                                                                Stock disponible: {{ cart.product.stockDispo }}
                                                            </span>
                                                        </div>
                                                    </div>
                                                </th>
                                                <td class="border-0 align-middle">
                                                    <strong>{{ (cart.product.prix / 100)|number_format(2, ',', '.') }}TND</strong>
                                                </td>
                                                <td class="border-0 align-middle">
                                                    <a class="text-primary" href="{{ path('app_decrease_from_cart', {'id': cart.product.id}) }}">
                                                        <i class="fa fa-minus" aria-hidden="true"></i>
                                                    </a>
                                                    <strong>{{ cart.quantity }}</strong>
                                                    <a class="text-success" href="{{ path('app_add_to_cart', {'id': cart.product.id}) }}">
                                                        <i class="fa fa-plus" aria-hidden="true"></i>
                                                    </a>
                                                    {% if cart.quantity > cart.product.stockDispo %}
                                                        <div class="text-danger small">Stock maximum: {{ cart.product.stockDispo }}</div>
                                                    {% endif %}
                                                </td>
                                                <td class="border-0 align-middle">
                                                    <strong>{{ (cart.product.prix * cart.quantity / 100)|number_format(2, ',', '.') }}TND</strong>
                                                </td>
                                                <td class="border-0 align-middle">
                                                    <a href="{{ path('app_delete_from_cart', {'id': cart.product.id}) }}" class="text-dark">
                                                        <i class="fa fa-trash"></i>
                                                    </a>
                                                </td>
                                                {% set total = total + cart.product.prix * cart.quantity %}
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                            <!-- End -->
                        </div>
                    </div>

                   <div class="row py-5 p-4 bg-white rounded shadow-sm">
    <div class="col-lg-6"></div>
    <div class="col-lg-6">
        <div class="p-4">
            <ul class="list-unstyled mb-4">
                <li class="d-flex justify-content-between py-3 border-bottom">
                    <strong class="text-muted">Total</strong>
                    <strong>{{ (total / 100)|number_format(2, ',', '.') }}TND</strong>
                </li>
            </ul>
            
            {% if stockError %}
                <div class="alert alert-danger mb-3">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    La quantité demandée pour un ou plusieurs produits dépasse le stock disponible. 
                    Veuillez ajuster les quantités avant de procéder au paiement.
                </div>
                <button class="btn btn-secondary rounded-pill py-2 btn-block" disabled>
                    <i class="fas fa-lock me-2"></i>Procéder au paiement
                </button>
            {% else %}
                <a href="{{ path('app_order') }}" class="btn btn-dark rounded-pill py-2 btn-block">
                    <i class="fas fa-credit-card me-2"></i>Procéder au paiement
                </a>
            {% endif %}
        </div>
    </div>
</div>
                {% else %}
                    <div class="alert alert-info">
                        Votre panier est vide. <a href="{{ path('app_products') }}" class="alert-link">Commencez vos achats</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}