{% extends 'base-front.html.twig' %}

{% block title %}D√©tails de commande - {{ qr_data.reference }}{% endblock %}

{% block content %}
<style>
    .command-container {
        max-width: 600px;
        margin: 30px auto;
        padding: 25px;
        background: white;
        border-radius: 10px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.1);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        line-height: 1.6;
    }
    
    .command-header {
        text-align: center;
        margin-bottom: 25px;
    }
    
    .section {
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 1px solid #eee;
    }
    
    .section-title {
        font-size: 1.3rem;
        color: #4bb8a9;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .info-line {
        display: flex;
        align-items: flex-start;
        margin-bottom: 10px;
        gap: 10px;
    }
    
    .info-icon {
        font-size: 1.2rem;
        min-width: 25px;
        text-align: center;
    }
    
    .address-block {
        margin-left: 35px;
    }
    
    .summary {
        background: #f8fafc;
        padding: 15px;
        border-radius: 8px;
        margin-top: 20px;
    }
    
    .summary-line {
        display: flex;
        justify-content: space-between;
        margin: 8px 0;
    }
    
    .total-line {
        font-weight: bold;
        margin-top: 12px;
        padding-top: 8px;
        border-top: 1px solid #ddd;
    }
</style>

<div class="command-container">
    <div class="command-header">
        <h1>D√©tails de la commande</h1>
        <p>R√©f√©rence: {{ qr_data.reference }}</p>
    </div>
    
    {# Client Information #}
    <div class="section">
        <h2 class="section-title"><i class="fas fa-user"></i> Informations client</h2>
        <div class="info-line">
            <span class="info-icon">üë§</span>
            <span>{{ qr_data.livraison|split('<br/>')[0] }}</span>
        </div>
        <div class="info-line">
            <span class="info-icon">üìû</span>
            <span>{{ qr_data.livraison|split('<br/>')[1] }}</span>
        </div>
    </div>
    
    {# Delivery Address #}
    <div class="section">
        <h2 class="section-title"><i class="fas fa-map-marker-alt"></i> Adresse</h2>
        <div class="info-line">
            <span class="info-icon">üè¢</span>
            <span>{{ qr_data.livraison|split('<br/>')[2] }}</span>
        </div>
        <div class="address-block">
            <div class="info-line">
                <span class="info-icon">üìç</span>
                <span>{{ qr_data.livraison|split('<br/>')[3] }}</span>
            </div>
            <div class="info-line">
                <span class="info-icon"></span>
                <span>{{ qr_data.livraison|split('<br/>')[4] }}</span>
            </div>
            <div class="info-line">
                <span class="info-icon"></span>
                <span>{{ qr_data.livraison|split('<br/>')[5] }}</span>
            </div>
        </div>
    </div>
    
    {# Carrier Information #}
    <div class="section">
        <h2 class="section-title"><i class="fas fa-truck"></i> Transporteur</h2>
        <div class="info-line">
            <span class="info-icon">üöö</span>
            <span>{{ qr_data.transporteur.nom }}</span>
        </div>
        <div class="info-line">
            <span class="info-icon">üí∞</span>
            <span>Frais: {{ qr_data.transporteur.prix|number_format(2, ',', ' ') }} TND</span>
        </div>
    </div>
    
    {# Products #}
    <div class="section">
        <h2 class="section-title"><i class="fas fa-shopping-basket"></i> Produits command√©s</h2>
        {% if qr_data.produits is empty %}
            <div class="info-line">
                <span class="info-icon">‚ÑπÔ∏è</span>
                <span>Aucun produit dans cette commande</span>
            </div>
        {% else %}
            {% for produit in qr_data.produits %}
                <div class="info-line">
                    <span class="info-icon">üì¶</span>
                    <span><strong>{{ produit.produit }}</strong></span>
                </div>
                <div class="info-line">
                    <span class="info-icon"></span>
                    <span>Quantit√©: {{ produit.quantite }}</span>
                </div>
                <div class="info-line">
                    <span class="info-icon"></span>
                    <span>Prix unitaire: {{ produit.prix|number_format(2, ',', ' ') }} TND</span>
                </div>
                <div class="info-line">
                    <span class="info-icon"></span>
                    <span>Total: {{ (produit.prix * produit.quantite)|number_format(2, ',', ' ') }} TND</span>
                </div>
                {% if not loop.last %}<hr style="margin: 10px 0; opacity: 0.3;">{% endif %}
            {% endfor %}
        {% endif %}
    </div>
    
    {# Summary #}
    <div class="summary">
        <h2 class="section-title"><i class="fas fa-receipt"></i> R√©capitulatif</h2>
        <div class="summary-line">
            <span>Sous-total:</span>
            <span>{{ (qr_data.total - qr_data.transporteur.prix)|number_format(2, ',', ' ') }} TND</span>
        </div>
        <div class="summary-line">
            <span>Frais de livraison:</span>
            <span>{{ qr_data.transporteur.prix|number_format(2, ',', ' ') }} TND</span>
        </div>
        <div class="summary-line total-line">
            <span>Total:</span>
            <span>{{ qr_data.total|number_format(2, ',', ' ') }} TND</span>
        </div>
    </div>
</div>
{% endblock %}