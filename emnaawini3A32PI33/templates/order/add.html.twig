{% extends 'base-front.html.twig' %}

{% block title %}Récapitulatif de commande{% endblock %}

{% block content %}
    <style>
        .shop {
            font-size: 10px;
        }
        
        .space {
            letter-spacing: 0.8px !important;
        }
        
        .second a:hover {
            color: rgb(92, 92, 92);
        }
        
        .active-2 {
            color: rgb(92, 92, 92)
        }
        
        .breadcrumb>li+li:before {
            content: "" !important
        }
        
        .breadcrumb {
            padding: 0;
            font-size: 10px;
            color: #aaa !important;
        }
        
        .first {
            background-color: white;
        }
        
        a {
            text-decoration: none !important;
            color: #aaa;
        }
        
        .btn-lg,
        .form-control-sm:focus,
        .form-control-sm:active,
        a:focus,
        a:active {
            outline: none !important;
            box-shadow: none !important
        }
        
        .form-control-sm:focus {
            border: 1.5px solid #4bb8a9;
        }
        
        .btn-group-lg > .btn,
        .btn-lg {
            padding: 0.5rem 0.1rem;
            font-size: 1rem;
            border-radius: 0;
            color: white !important;
            background-color: #4bb8a9;
            height: 2.8rem !important;
            border-radius: 0.2rem !important;
        }
        
        .btn-group-lg>.btn:hover,
        .btn-lg:hover {
            background-color: #26A69A;
        }
        
        .btn-outline-primary {
            background-color: #fff !important;
            color: #4bb8a9 !important;
            border-radius: 0.2rem !important;
            border: 1px solid #4bb8a9;
        }
        
        .btn-outline-primary:hover {
            background-color: #4bb8a9 !important;
            color: #fff !important;
            border: 1px solid #4bb8a9;
        }
        
        .card-2 {
            margin-top: 40px !important;
        }
        
        .card-header {
            background-color: #fff;
            border-bottom: 0 solid #aaaa !important;
        }
        
        p {
            font-size: 13px;
        }
        
        .small {
            font-size: 9px !important;
        }
        
        .form-control-sm {
            height: calc(2.2em + 0.5rem + 2px);
            font-size: 0.875rem;
            line-height: 1.5;
            border-radius: 0;
        }
        
        .cursor-pointer {
            cursor: pointer;
        }
        
        .boxed {
            padding: 0 8px;
            background-color: #4bb8a9;
            color: white;
        }
        
        .boxed-1 {
            padding: 0 8px;
            color: black !important;
            border: 1px solid #aaaa;
        }
        
        .bell {
            opacity: 0.5;
            cursor: pointer;
        }
        
        /* New styles */
        .qr-container {
            text-align: center;
            margin: 20px 0;
            padding: 15px;
            background-color: #f8f9fa;
            border-radius: 5px;
        }
        
        .qr-code {
            max-width: 200px;
            margin: 0 auto;
        }
        
        .info-section {
            margin-bottom: 20px;
            padding: 15px;
            border-radius: 5px;
            background-color: #f8f9fa;
        }
        
        .info-title {
            font-weight: bold;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            font-size: 1.1em;
        }
        
        .info-title i {
            margin-right: 10px;
            font-size: 1.2em;
            color: #4bb8a9;
        }
        
        .product-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
            align-items: center;
        }
        
        .summary-section {
            background-color: #e9ecef;
            padding: 15px;
            border-radius: 5px;
        }
        
        @media(max-width: 767px) {
            .breadcrumb-item+.breadcrumb-item {
                padding-left: 0
            }
        }
    </style>

    <div class="container-fluid my-5">
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <div class="card shadow-lg">
                    <div class="row mx-auto justify-content-center text-center">
                        <div class="col-12 mt-3">
                            <nav aria-label="breadcrumb" class="second">
                                <ol class="breadcrumb indigo lighten-6 first">
                                    <li class="breadcrumb-item font-weight-bold">
                                        <a class="black-text text-uppercase" href="{{path('app_products')}}">
                                            <span class="mr-md-3 mr-1">Produits</span>
                                        </a>
                                        <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                                    </li>
                                    <li class="breadcrumb-item font-weight-bold">
                                        <a class="black-text text-uppercase" href="{{path('app_panier')}}">
                                            <span class="mr-md-3 mr-1">Panier</span>
                                        </a>
                                        <i class="fa fa-angle-double-right text-uppercase" aria-hidden="true"></i>
                                    </li>
                                    <li class="breadcrumb-item font-weight-bold">
                                        <a class="black-text text-uppercase active-2" href="#">
                                            <span class="mr-md-3 mr-1">Récapitulatif</span>
                                        </a>
                                    </li>
                                </ol>
                            </nav>
                        </div>
                    </div>

                    <div class="row justify-content-around">
                        <!-- Colonne gauche avec uniquement le QR code -->
                        <div class="col-md-5">
                            <div class="card border-0">
                                <div class="card-header pb-0">
                                    <h2 class="card-title space">Mon récapitulatif</h2>
                                    <p class="card-text text-muted mt-4 space">Vérifiez vos informations avant de payer votre commande.</p>
                                    <hr class="my-0">
                                </div>
                                <div class="card-body">
                                    <div class="qr-container">
                                        <div class="info-title">
                                            <i class="fas fa-qrcode"></i> Scanner pour voir les détails
                                        </div>
                                        <img src="{{ asset(qrCodePath) }}" alt="QR Code de la commande" class="qr-code">
                                        <p class="text-muted small mt-2">Scannez ce QR code pour accéder aux détails de votre commande</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Colonne droite avec les détails de la commande -->
                        <div class="col-md-5">
                            <div class="card border-0">
                                <div class="card-header card-2">
                                    <p class="card-text text-muted mt-md-4 mb-2 space">VOTRE COMMANDE</p>
                                    <hr class="my-2">
                                </div>
                                <div class="card-body pt-0">
                                    <div class="info-section mb-3">
                                        <div class="info-title">
                                            <i class="fas fa-shopping-cart"></i> Produits commandés
                                        </div>
                                        {% if fullCarts|length > 0 %}
                                            {% for cart in fullCarts %}
                                                <div class="product-item">
                                                    <div>
                                                        <b>{{ cart.product.nomProduit }}</b>
                                                        <small class="text-muted d-block">{{ cart.product.categorie.nomcategorie }}</small>
                                                    </div>
                                                    <div class="text-center">
                                                        <span class="boxed-1">{{ cart.quantity }}</span> × 
                                                        {{ (cart.product.prix / 100)|number_format(2, ',', ' ') }} TND
                                                    </div>
                                                    <div class="text-right">
                                                        <b>{{ (cart.product.prix * cart.quantity / 100)|number_format(2, ',', ' ') }} TND</b>
                                                    </div>
                                                </div>
                                                {% if not loop.last %}<hr class="my-2">{% endif %}
                                            {% endfor %}
                                        {% else %}
                                            <p>ℹ️ Aucun produit dans cette commande</p>
                                        {% endif %}
                                    </div>
                                    
                                    <div class="summary-section">
                                        <div class="info-title">
                                            <i class="fas fa-receipt"></i> Récapitulatif
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <span>Sous-total :</span>
                                            <span>{{ (total / 100)|number_format(2, ',', ' ') }} TND</span>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <span>Frais de livraison :</span>
                                            <span>{{ (carrier.price / 100)|number_format(2, ',', ' ') }} TND</span>
                                        </div>
                                        <hr>
                                        <div class="d-flex justify-content-between font-weight-bold">
                                            <span>Total :</span>
                                            <span>{{ ((total + carrier.price) / 100)|number_format(2, ',', ' ') }} TND</span>
                                        </div>
                                    </div>

                                    <div class="row mb-5 mt-4">
                                        <div class="col-md-7 col-lg-6 mx-auto">
                                            <form action="{{ path('app_stripe_ceckout_session', {'reference': reference}) }}" method="POST">
                                                <button type="submit" id="checkout-button" class="btn btn-block btn-outline-primary btn-lg">
                                                    <i class="fas fa-credit-card"></i> Payer {{ ((total + carrier.price) / 100)|number_format(2, ',', ' ') }} TND
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script src="https://polyfill.io/v3/polyfill.min.js?version=3.52.1&features=fetch"></script>
    <script src="https://js.stripe.com/v3/"></script>
{% endblock %}