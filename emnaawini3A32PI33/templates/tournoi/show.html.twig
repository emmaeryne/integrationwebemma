                                            </tr>
                                            <tr>
                                                <th scope="row">
                                                    {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                        Nom Tournoi
                                                    {% else %}
                                                        Tournament Name
                                                    {% endif %}
                                                </th>
                                                <td>{{ tournoi.nomTournoi }}</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">
                                                    {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                        Type Tournoi
                                                    {% else %}
                                                        Tournament Type
                                                    {% endif %}
                                                </th>
                                                <td>
                                                    <span class="badge bg-{{ tournoi.typeTournoi == 'Single' ? 'primary' : (tournoi.typeTournoi == 'Team' ? 'success' : 'info') }}">
                                                        {{ tournoi.typeTournoi }}
                                                    </span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">
                                                    {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                        Date Tournoi
                                                    {% else %}
                                                        Tournament Date
                                                    {% endif %}
