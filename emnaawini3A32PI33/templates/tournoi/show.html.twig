                                            </tr>
                                            <tr>
                                                <th scope="row">
                                                    {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                        Description
                                                    {% else %}
                                                        Description
                                                    {% endif %}
                                                </th>
                                                <td>{{ tournoi.descriptionTournoi ?: 'No description provided' }}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
