    <link rel="stylesheet" href="{{ asset('sneat-1.0.0/assets/vendor/libs/apex-charts/apex-charts.css') }}" />

    <!-- Custom CSS -->
    <style>
        .matches-wrapper {
            max-width: 1200px;
            margin: 40px auto;
            padding: 30px;
            background: #ffffff;
            border-radius: 15px;
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.08);
        }
        .header-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 35px;
            border-bottom: 4px solid #3498db;
            padding-bottom: 15px;
        }
        .header-section h1 {
            font-size: 2.5rem;
            color: #2c3e50;
            margin: 0;
            font-weight: 700;
            letter-spacing: 0.5px;
        }
        .breadcrumb {
            background: transparent;
            padding: 0;
            margin-bottom: 20px;
        }
        .breadcrumb-item a {
            color: #3498db;
            text-decoration: none;
        }
        .breadcrumb-item a:hover {
            text-decoration: underline;
        }
        .btn-back {
            background-color: #6c757d;
            border-color: #6c757d;
            padding: 10px 20px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        .btn-back:hover {
            background-color: #5c636a;
            border-color: #5c636a;
            transform: translateY(-2px);
        }
        .btn-edit {
            background-color: #007bff;
            border-color: #007bff;
            padding: 10px 20px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        .btn-edit:hover {
            background-color: #0056b3;
            border-color: #0056b3;
            transform: translateY(-2px);
        }
        .btn-delete {
            background-color: #dc3545;
            border-color: #dc3545;
            padding: 10px 20px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        .btn-delete:hover {
            background-color: #c82333;
            border-color: #c82333;
            transform: translateY(-2px);
        }
        .card {
            background: #f8f9fa;
            border: none;
            border-radius: 10px;
            transition: transform 0.3s ease;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }
        .table th {
            background-color: #343a40;
            color: #fff;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.9rem;
        }
        .table td {
            vertical-align: middle;
            font-size: 1rem;
            color: #2c3e50;
        }
        .table .badge {
            font-size: 0.9rem;
            padding: 0.5em 0.8em;
        }
        .actions {
            display: flex;
            gap: 10px;
            justify-content: flex-end;
            margin-top: 20px;
        }
        @media (max-width: 767px) {
            .matches-wrapper {
                margin: 20px;
                padding: 20px;
            }
            .header-section h1 {
                font-size: 2rem;
            }
            .btn-back, .btn-edit, .btn-delete {
                padding: 8px 16px;
                font-size: 0.9rem;
            }
            .table th, .table td {
                font-size: 0.85rem;
                padding: 0.5rem;
            }
            .actions {
                flex-direction: column;
                gap: 10px;
            }
        }
    </style>
{% endblock %}

