                            <!-- Matches Section -->
                            <h2>
                                {% if app.request.query.get('lang', 'en') == 'fr' %}
                                    Matchs dans ce Tournoi
                                {% else %}
                                    Matches in this Tournament
                                {% endif %}
                            </h2>
                            {% if matches|length > 0 %}
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th scope="col">
                                                    {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                        ID Match
                                                    {% else %}
                                                        Match ID
                                                    {% endif %}
                                                </th>
                                                <th scope="col">
                                                    {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                        Équipe 1
                                                    {% else %}
                                                        Team 1
                                                    {% endif %}
                                                </th>
                                                <th scope="col">
                                                    {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                        Équipe 2
                                                    {% else %}
                                                        Team 2
                                                    {% endif %}
                                                </th>
                                                <th scope="col">
                                                    {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                        Date
                                                    {% else %}
                                                        Date
                                                    {% endif %}
                                                </th>
                                                <th scope="col">
                                                    {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                        Statut
                                                    {% else %}
                                                        Status
                                                    {% endif %}
                                                </th>
                                                <th scope="col">
                                                    {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                        Actions
                                                    {% else %}
                                                        Actions
                                                    {% endif %}
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for match in matches %}
                                                <tr>
                                                    <td>{{ match.id }}</td>
                                                    <td>{{ match.equipe1.nomEquipe }}</td>
                                                    <td>{{ match.equipe2.nomEquipe }}</td>
                                                    <td>{{ match.dateMatch|date('Y-m-d H:i') }}</td>
                                                    <td>{{ match.statutMatch }}</td>
                                                    <td>
                                                        <a href="{{ path('app_game_match_show', {'id': match.id}) }}"
                                                           class="btn btn-sm btn-primary"
                                                           aria-label="Show match">
                                                            <i class="bi bi-eye"></i> Show
                                                        </a>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle me-2"></i>
                                    {% if app.request.query.get('lang', 'en') == 'fr' %}
                                        Aucun match trouvé pour ce tournoi.
                                    {% else %}
                                        No matches found for this tournament.
                                    {% endif %}
                                </div>
                            {% endif %}

                            <!-- Actions -->
                            <div class="actions">
                                <a href="{{ path('app_tournoi_index', app.request.query.all | merge({'lang': app.request.query.get('lang', 'en')})) }}"
                                   class="btn btn-back text-white"
                                   aria-label="Back to tournaments list">
                                    <i class="bi bi-arrow-left-circle me-2"></i>
                                    {% if app.request.query.get('lang', 'en') == 'fr' %}
                                        Retour à la Liste
                                    {% else %}
                                        Back to List
                                    {% endif %}
                                </a>
                                <a href="{{ path('app_tournoi_edit', {'id_tournoi': tournoi.idTournoi}) }}"
                                   class="btn btn-edit text-white"
                                   aria-label="Edit tournament">
                                    <i class="bi bi-pencil me-2"></i>
                                    {% if app.request.query.get('lang', 'en') == 'fr' %}
                                        Modifier
                                    {% else %}
                                        Edit
                                    {% endif %}
                                </a>
                                <form method="post" action="{{ path('app_tournoi_delete', {'id_tournoi': tournoi.idTournoi}) }}"
                                      onsubmit="return confirm('{% if app.request.query.get('lang', 'en') == 'fr' %}Êtes-vous sûr de vouloir supprimer le tournoi #{{ tournoi.idTournoi }} ?{% else %}Are you sure you want to delete Tournament #{{ tournoi.idTournoi }}?{% endif %}');"
                                      style="display:inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tournoi.idTournoi) }}">
                                    <button type="submit" class="btn btn-delete text-white" aria-label="Delete tournament">
                                        <i class="bi bi-trash me-2"></i>
                                        {% if app.request.query.get('lang', 'en') == 'fr' %}
                                            Supprimer
                                        {% else %}
                                            Delete
                                        {% endif %}
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Footer -->
                    <footer class="content-footer footer bg-footer-theme">
                        <div class="container-xxl d-flex flex-wrap justify-content-between py-2 flex-md-row flex-column">
                            <div class="mb-2 mb-md-0">
                                © {{ "now"|date("Y") }}, made with ❤️ by beeu
                            </div>
                        </div>
                    </footer>
                    <!-- / Footer -->
                    <div class="content-backdrop fade"></div>
                </div>
                <!-- / Content wrapper -->
            </div>
            <!-- / Layout page -->
        </div>
        <div class="layout-overlay layout-menu-toggle"></div>
    </div>

{% endblock %}

