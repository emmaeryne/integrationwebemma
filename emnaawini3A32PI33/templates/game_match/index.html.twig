                <!-- Content wrapper -->
                <div class="content-wrapper">
                    <div class="container-xxl flex-grow-1 container-p-y">
                        <div class="matches-wrapper">
                            <!-- Header -->
                            <div class="header-section">
                                <h1>Game Matches</h1>
                                <a href="{{ path('app_game_match_new') }}" class="btn btn-add-match text-white">
                                    <i class="bi bi-plus-circle me-2"></i>
                                    {% if app.request.query.get('lang', 'en') == 'fr' %}
                                        Créer un Nouveau Match
                                    {% else %}
                                        Create New Match
                                    {% endif %}
                                </a>
                            </div>

                            <!-- Flash Messages -->
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <i class="bi bi-check-circle me-2"></i> {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}
                            {% for message in app.flashes('error') %}
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <i class="bi bi-exclamation-triangle me-2"></i> {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}

                            <div class="language-switcher mb-3">
                                <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all | merge({'lang': 'en'})) }}"
                                   class="btn {% if app.request.query.get('lang', 'en') == 'en' %}btn-primary{% else %}btn-secondary{% endif %}">
                                    🇬🇧
                                </a>
                                <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all | merge({'lang': 'fr'})) }}"
                                   class="btn {% if app.request.query.get('lang', 'en') == 'fr' %}btn-primary{% else %}btn-secondary{% endif %}">
                                    🇫🇷
                                </a>
                            </div>

                            <div class="filter-form mb-4">
                                <form method="get" action="{{ path('app_game_match_index') }}" class="row g-3">
                                    <div class="col-md-4">
                                        <label for="team" class="form-label">
                                            {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                Équipe
                                            {% else %}
                                                Team
                                            {% endif %}
                                        </label>
                                        <input type="text" name="team" id="team" class="form-control" placeholder="{% if app.request.query.get('lang', 'en') == 'fr' %}Entrez le nom de l'équipe{% else %}Enter Team Name{% endif %}" value="{{ app.request.query.get('team') }}">
                                    </div>
                                    <div class="col-md-4">
                                        <label for="status" class="form-label">
                                            {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                Statut du Match
                                            {% else %}
                                                Match Status
                                            {% endif %}
                                        </label>
                                        <select name="status" id="status" class="form-select">
                                            <option value="">{% if app.request.query.get('lang', 'en') == 'fr' %}Tous{% else %}All{% endif %}</option>
                                            <option value="ongoing" {{ app.request.query.get('status') == 'ongoing' ? 'selected' : '' }}>
                                                {% if app.request.query.get('lang', 'en') == 'fr' %}En Cours{% else %}Ongoing{% endif %}
                                            </option>
                                            <option value="completed" {{ app.request.query.get('status') == 'completed' ? 'selected' : '' }}>
                                                {% if app.request.query.get('lang', 'en') == 'fr' %}Terminé{% else %}Completed{% endif %}
                                            </option>
                                            <option value="cancelled" {{ app.request.query.get('status') == 'cancelled' ? 'selected' : '' }}>
                                                {% if app.request.query.get('lang', 'en') == 'fr' %}Annulé{% else %}Cancelled{% endif %}
                                            </option>
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <label for="date" class="form-label">
                                            {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                Date du Match
                                            {% else %}
                                                Match Date
                                            {% endif %}
                                        </label>
                                        <input type="date" name="date" id="date" class="form-control" value="{{ app.request.query.get('date') }}">
                                    </div>
                                    <div class="col-md-12 d-flex justify-content-end">
                                        <button type="submit" class="btn btn-primary me-2">
                                            {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                Filtrer
                                            {% else %}
                                                Filter
                                            {% endif %}
                                        </button>
                                        <a href="{{ path('app_game_match_index') }}" class="btn btn-outline-secondary">
                                            {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                Réinitialiser
                                            {% else %}
                                                Reset
                                            {% endif %}
                                        </a>
                                    </div>
                                </form>
                            </div>
                            <a href="{{ path('app_game_match_export') }}" class="btn btn-success mb-3">
                                <i class="bi bi-file-earmark-arrow-down"></i>
                                {% if app.request.query.get('lang', 'en') == 'fr' %}
                                    Exporter en CSV
                                {% else %}
                                    Export to CSV
                                {% endif %}
                            </a>
                            <a href="{{ path('app_game_match_upload_csv') }}" class="btn btn-success mb-3">
                                <i class="bi bi-file-earmark-arrow-up"></i> Upload CSV
                            </a>
                            <!-- Table -->
                            {% if game_matches|length > 0 %}
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th scope="col">
                                                    {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                        ID du Match
                                                    {% else %}
                                                        Match ID
                                                    {% endif %}
                                                </th>
                                                <th scope="col">
                                                    {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                        Date du Match
                                                    {% else %}
                                                        Match Date
                                                    {% endif %}
                                                </th>
                                                <th scope="col">
                                                    {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                        Équipe 1
                                                    {% else %}
                                                        Team 1
                                                    {% endif %}
                                                </th>
                                                <th scope="col">
                                                    {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                        Score Équipe 1
                                                    {% else %}
                                                        Team 1 Score
                                                    {% endif %}
                                                </th>
                                                <th scope="col">
                                                    {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                        Équipe 2
                                                    {% else %}
                                                        Team 2
                                                    {% endif %}
                                                </th>
                                                <th scope="col">
                                                    {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                        Score Équipe 2
                                                    {% else %}
                                                        Team 2 Score
                                                    {% endif %}
                                                </th>
                                                <th scope="col">
                                                    {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                        Statut
                                                    {% else %}
                                                        Status
                                                    {% endif %}
                                                </th>
                                                <th scope="col">
                                                    {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                        Actions
                                                    {% else %}
                                                        Actions
                                                    {% endif %}
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for game_match in game_matches %}
                                                <tr>
                                                    <td>{{ game_match.idMatch }}</td>
                                                    <td>{{ game_match.dateMatch ? game_match.dateMatch|date('Y-m-d') : '' }}</td>
                                                    <td>{{ game_match.equipe1.nom_equipe }}</td>
                                                    <td>{{ game_match.scoreEquipe1 }}</td>
                                                    <td>{{ game_match.equipe2.nom_equipe }}</td>
                                                    <td>{{ game_match.scoreEquipe2 }}</td>
                                                    <td>
                                                        {% if app.request.query.get('lang', 'en') == 'fr' %}
                                                            {% if game_match.statutMatch == 'Completed' %}
                                                                Terminé
                                                            {% elseif game_match.statutMatch == 'Pending' %}
                                                                En Attente
                                                            {% elseif game_match.statutMatch == 'Ongoing' %}
                                                                En Cours
                                                            {% else %}
                                                                {{ game_match.statutMatch }}
                                                            {% endif %}
                                                        {% else %}
                                                            {{ game_match.statutMatch }}
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        <div class="d-flex gap-1">
                                                            <a href="{{ path('app_game_match_show', {'id': game_match.id}) }}" class="btn btn-info btn-sm" title="View">
                                                                <i class="bi bi-eye"></i>
                                                            </a>
                                                            <a href="{{ path('app_game_match_edit', {'id': game_match.id}) }}" class="btn btn-primary btn-sm" title="Edit">
                                                                <i class="bi bi-pencil"></i>
                                                            </a>
                                                            <form method="post" action="{{ path('app_game_match_delete', {'id': game_match.id}) }}" onsubmit="return confirm('Are you sure you want to delete this match?');">
                                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ game_match.id) }}">
                                                                <button type="submit" class="btn btn-danger btn-sm" title="Delete">
                                                                    <i class="bi bi-trash"></i>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>

                                <div class="pagination">
                                    {{ knp_pagination_render(game_matches) }}
                                </div>
                            {% else %}
                                <div class="no-results">
                                    <i class="bi bi-info-circle me-2"></i> No game matches found.
                                </div>
                            {% endif %}
                        </div>
                        <div class="navigation-buttons text-center mt-4">
                            <a href="{{ path('app_game_match_index') }}" class="btn btn-secondary me-2">
                                Game Matches
                            </a>
                            <a href="{{ path('app_tournoi_index') }}" class="btn btn-secondary me-2">
                                Tournaments
                            </a>
                            <a href="{{ path('app_equipe_index') }}" class="btn btn-secondary me-2">
                                Teams
                            </a>
                            <a href="{{ path('app_joueur_index') }}" class="btn btn-secondary me-2">
                                Players
                            </a>
                            <a href="{{ path('app_terrain_index') }}" class="btn btn-secondary">
                                Terrains
                            </a>
                        </div>
                    </div>

                    <!-- Footer -->
                    <footer class="content-footer footer bg-footer-theme">
                        <div class="container-xxl d-flex flex-wrap justify-content-between py-2 flex-md-row flex-column">
                            <div class="mb-2 mb-md-0">
                                © {{ "now"|date("Y") }}, made with ❤️ by beeu
                            </div>
                        </div>
                    </footer>
                    <!-- / Footer -->
                    <div class="content-backdrop fade"></div>
                </div>
                <!-- / Content wrapper -->
            </div>
            <!-- / Layout page -->
        </div>
        <div class="layout-overlay layout-menu-toggle"></div>
    </div>


{% endblock %}

