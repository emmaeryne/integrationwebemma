{% extends 'base.html.twig' %}

{% block title %}Nouvelle adresse{% endblock %}

{% block content %}
<div class="container mt-5">
    <h1 class="mb-5 text-center">Gérer mes adresses</h1>

    {{ form_start(form, {'attr': {'id': 'address-form', 'novalidate': 'novalidate'}}) }}

    <div class="row">
        <div class="col-md-6 mb-3">
            {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom de l\'adresse'}}) }}
        </div>
        <div class="col-md-4 mb-3">
            {{ form_row(form.company, {'attr': {'class': 'form-control', 'placeholder': 'Entreprise'}}) }}
        </div>
        <div class="col-md-2 mb-3">
            {{ form_row(form.phone, {'attr': {'class': 'form-control', 'placeholder': 'Téléphone'}}) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            {{ form_row(form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_row(form.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_row(form.adress, {'attr': {'class': 'form-control', 'placeholder': 'Adresse'}}) }}
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            {{ form_row(form.city, {'attr': {'class': 'form-control', 'placeholder': 'Ville'}}) }}
        </div>
        <div class="col-md-4 mb-3">
            {{ form_row(form.country, {'attr': {'class': 'form-control', 'placeholder': 'Pays'}}) }}
        </div>
        <div class="col-md-2 mb-3">
            {{ form_row(form.postal, {'attr': {'class': 'form-control', 'placeholder': 'Code postal'}}) }}
        </div>
    </div>

  

    {{ form_end(form) }}
</div>
{% endblock %}

{% block javascripts %}
<script>
    $(document).ready(function() {
        $('#address-form').validate({
            rules: {
                'form[name]': {
                    required: true,
                    minlength: 2
                },
                'form[company]': {
                    required: true
                },
                'form[phone]': {
                    required: true,
                    pattern: /^[0-9]{10}$/
                },
                'form[firstname]': {
                    required: true,
                    minlength: 2
                },
                'form[lastname]': {
                    required: true,
                    minlength: 2
                },
                'form[adress]': {
                    required: true
                },
                'form[city]': {
                    required: true
                },
                'form[country]': {
                    required: true
                },
                'form[postal]': {
                    required: true,
                    pattern: /^[0-9]{5}$/
                }
            },
            errorPlacement: function(error, element) {
                // Ne fait rien, donc aucun message d'erreur ne sera affiché
            }
        });
    });
</script>
{% endblock %}
