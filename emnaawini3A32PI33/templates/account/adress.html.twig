{% extends 'base.html.twig' %}

{% block title %}Mes adresses{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Mes adresses</h1>
        <a href="{{ path('app_account_add_adress') }}" class="btn btn-info btn-sm">
            <i class="fas fa-plus"></i> Ajouter une adresse
        </a>
    </div>
    <hr>

    {% if app.user.adresses|length == 0 %}
        <div class="alert alert-info">
            Vous n'avez aucune adresse enregistrée. 
            <a href="{{ path('app_account_add_adress') }}" class="alert-link">Cliquez ici pour en ajouter une</a>.
        </div>
    {% else %}
        <div class="row">
            {% for address in app.user.adresses %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">{{ address.name }}</h5>
                            <div class="card-text mb-3">
                                <p class="mb-1">{{ address.adress }}</p>
                                <p class="mb-1">{{ address.postal }} {{ address.city }}</p>
                                <p>{{ address.country }}</p>
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_account_update_adress', {'id': address.id}) }}" 
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                                <a href="{{ path('app_account_delete_adress', {'id': address.id}) }}" 
                                   class="btn btn-outline-danger btn-sm"
                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette adresse ?')">
                                    <i class="fas fa-trash"></i> Supprimer
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}