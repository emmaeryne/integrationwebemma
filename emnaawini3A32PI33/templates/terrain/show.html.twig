{% extends 'base.html.twig' %}

{% block title %}Terrain Details - Gestion | Hive{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .matches-wrapper {
            max-width: 1200px;
            margin: 40px auto;
            padding: 30px;
            background: #ffffff;
            border-radius: 15px;
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.08);
        }
        .header-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 35px;
            border-bottom: 4px solid #3498db;
            padding-bottom: 15px;
        }
        .header-section h1 {
            font-size: 2.5rem;
            color: #2c3e50;
            margin: 0;
            font-weight: 700;
            letter-spacing: 0.5px;
        }
        .table th {
            background-color: #343a40;
            color: #fff;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.9rem;
        }
        .table td {
            vertical-align: middle;
            font-size: 1rem;
            color: #2c3e50;
        }
        .table-hover tbody tr:hover {
            background-color: #f1f3f5;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="matches-wrapper">
        <div class="header-section">
            <h1>Terrain Details</h1>
            <a href="{{ path('app_terrain_index') }}" class="btn btn-primary">Back to List</a>
        </div>

        <table class="table">
            <tbody>
                <tr>
                    <th>ID Terrain</th>
                    <td>{{ terrain.idTerrain }}</td>
                </tr>
            </tbody>
        </table>

        <h2>Matches in this Terrain</h2>
        {% if matches|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Match ID</th>
                            <th scope="col">Team 1</th>
                            <th scope="col">Team 2</th>
                            <th scope="col">Date</th>
                            <th scope="col">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for match in matches %}
                            <tr>
                                <td>{{ match.id }}</td>
                                <td>{{ match.equipe1.name }}</td>
                                <td>{{ match.equipe2.name }}</td>
                                <td>{{ match.dateMatch|date('Y-m-d H:i') }}</td>
                                <td>{{ match.statutMatch }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="no-results">
                <i class="bi bi-info-circle me-2"></i> No matches found for this terrain.
            </div>
        {% endif %}
    </div>
{% endblock %}
