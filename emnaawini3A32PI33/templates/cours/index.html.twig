            font-size: 2.5rem;
            font-weight: 700;
            color: var(--bleu-vif);
            text-transform: uppercase;
            letter-spacing: 2px;
            text-shadow: 2px 2px 6px rgba(0, 191, 255, 0.4);
            animation: fadeInDown 1s ease;
        }
        /* Forms */
        .form-control {
            width: 100%;
            padding: 1rem;
            border: 2px solid var(--bleu-moyen);
            border-radius: 8px;
            font-family: 'Poppins', sans-serif;
            font-size: 1rem;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
            background: var(--bleu-clair);
            animation: fadeInUp 0.6s ease 0.2s;
            animation-fill-mode: both;
        }
        .form-control:focus {
            border-color: var(--bleu-vif);
            box-shadow: 0 0 0 0.25rem rgba(0, 191, 255, 0.25);
            background: #fff;
        }
        /* Alerts */
        .alert {
            border-radius: 8px;
            box-shadow: var(--shadow);
            font-family: 'Poppins', sans-serif;
            font-size: 1rem;
            padding: 15px;
            margin-bottom: 1.5rem;
        }
        .alert-success {
            background: #d4edda;
            color: #155724;
        }
        .alert-danger {
            background: #f8d7da;
            color: #721c24;
        }
        .alert-info {
            background: #d1ecf1;
            color: #0c5460;
        }
        /* Table */
        .table-responsive {
            border-radius: 16px;
            overflow: hidden;
            background: rgba(255, 255, 255, 0.95);
            box-shadow: var(--shadow);
            transform-style: preserve-3d;
            transition: all 0.5s ease;
        }
        .table-responsive:hover {
            transform: translateY(-5px) rotateX(2deg);
            box-shadow: 0 12px 25px rgba(0, 191, 255, 0.4);
        }
        .table {
            margin-bottom: 0;
            font-family: 'Poppins', sans-serif;
        }
        .table thead th {
            background: var(--bleu-fonce);
            color: var(--bleu-clair);
            font-family: 'Oswald', sans-serif;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 1px;
            padding: 15px;
            border: none;
        }
        .table tbody tr {
            transition: background 0.3s ease;
        }
        .table tbody tr:hover {
            background: var(--bleu-clair);
        }
        .table td {
            padding: 15px;
            vertical-align: middle;
            border: none;
        }
        .badge {
            font-family: 'Poppins', sans-serif;
            font-weight: 500;
            padding: 8px 12px;
            border-radius: 8px;
            font-size: 0.9rem;
        }
        .bg-success {
            background: #28a745 !important;
        }
        .bg-danger {
            background: #dc3545 !important;
        }
        .bg-warning {
            background: #ffc107 !important;
        }
        .bg-secondary {
            background: var(--gris) !important;
        }
        /* Animations */
        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(60px); }
            to { opacity: 1; transform: translateY(0); }
        }
        @keyframes fadeInDown {
            from { opacity: 0; transform: translateY(-60px); }
            to { opacity: 1; transform: translateY(0); }
        }
        /* Responsive Adjustments */
        @media (max-width: 991px) {
            .navbar-brand h1 {
                font-size: 2rem;
            }
            .navbar-brand img {
                max-height: 60px;
            }
            .nav-link {
                font-size: 1rem;
                padding: 8px 12px;
            }
            .carousel-caption h1 {
                font-size: 2.5rem;
            }
            .carousel-caption h5 {
                font-size: 1.2rem;
            }
            .btn-primary, .btn-secondary, .btn-warning, .btn-danger, .btn-info {
                padding: 10px 20px;
                font-size: 0.9rem;
            }
            .page-header h1 {
                font-size: 2rem;
            }
            .table td {
                font-size: 0.9rem;
                padding: 10px;
            }
        }
        @media (max-width: 576px) {
            .carousel-caption {
                padding: 15px 25px;
            }
            .carousel-caption h1 {
                font-size: 1.8rem;
            }
            .carousel-caption h5 {
                font-size: 1rem;
            }
            .container {
                margin: 1.5rem;
                padding: 1rem;
            }
            .page-header h1 {
                font-size: 1.8rem;
            }
            .form-control {
                font-size: 0.9rem;
                padding: 0.8rem;
            }
            .btn {
                padding: 8px 16px;
                font-size: 0.8rem;
            }
            .table td {
                font-size: 0.8rem;
                padding: 8px;
            }
            .badge {
                font-size: 0.8rem;
                padding: 6px 10px;
            }
        }
    </style>
</head>
