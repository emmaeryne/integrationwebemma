            </a>
            <a href="{{ path('app_cours_index', {'sort': 'duree', 'direction': app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}" class="btn btn-secondary">
                {{ 'Trier par Durée'|trans|default('Trier par Durée') }} {{ app.request.query.get('sort') == 'duree' ? (app.request.query.get('direction') == 'asc' ? '↑' : '↓') : '' }}
            </a>
        </div>

        <!-- Action Buttons -->
        <div class="mb-4 d-flex gap-2 animate__animated animate__fadeInUp">
            <a href="{{ path('app_cours_new') }}" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i> {{ 'Créer un nouveau cours'|trans|default('Créer un nouveau cours') }}
            </a>
            <a href="{{ path('app_cours_pdf') }}" class="btn btn-primary">
                <i class="fas fa-file-pdf me-2"></i> {{ 'Générer PDF'|trans|default('Générer PDF') }}
            </a>
        </div>

        <!-- Course Table -->
        <div class="table-responsive animate__animated animate__fadeInUp animate__delay-1s">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>{{ 'Nom'|trans|default('Nom') }}</th>
                        <th>{{ 'État'|trans|default('État') }}</th>
                        <th>{{ 'Durée'|trans|default('Durée') }}</th>
                        <th>{{ 'Actions'|trans|default('Actions') }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for cour in cours %}
                        <tr>
                            <td>{{ cour.nomCours }}</td>
                            <td>
                                {% set etatClass = {
                                    'actif': 'success',
                                    'inactif': 'danger',
                                    'en attente': 'warning',
                                    'default': 'secondary'
                                } %}
                                <span class="badge bg-{{ etatClass[cour.etatCours|lower] ?? etatClass['default'] }}">
                                    {{ cour.etatCours|trans|default(cour.etatCours) }}
                                </span>
                            </td>
                            <td>{{ cour.duree }} {{ 'minutes'|trans|default('minutes') }}</td>
                            <td class="d-flex gap-2">
                                <a href="{{ path('app_cours_edit', {'id_cours': cour.idCours}) }}" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit me-1"></i> {{ 'Modifier'|trans|default('Modifier') }}
                                </a>
                                <form method="post" action="{{ path('app_cours_delete', {'id_cours': cour.idCours}) }}" style="display: inline-block;" onsubmit="return confirm('{{ 'Êtes-vous sûr de vouloir supprimer ce cours?'|trans|default('Êtes-vous sûr de vouloir supprimer ce cours?') }}');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cour.idCours) }}">
                                    <button class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash me-1"></i> {{ 'Supprimer'|trans|default('Supprimer') }}
                                    </button>
                                </form>
                                <a href="{{ path('app_cours_send_email', {'id_cours': cour.idCours}) }}" class="btn btn-info btn-sm">
                                    <i class="fas fa-envelope me-1"></i> {{ 'Envoyer Email'|trans|default('Envoyer Email') }}
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center">{{ 'Aucun cours trouvé'|trans|default('Aucun cours trouvé') }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ asset('lib/easing/easing.min.js') }}"></script>
    <script src="{{ asset('lib/waypoints/waypoints.min.js') }}"></script>
    <script src="{{ asset('lib/counterup/counterup.min.js') }}"></script>
    <script src="{{ asset('lib/owlcarousel/owl.carousel.min.js') }}"></script>

    <!-- Template Javascript -->
    <script src="{{ asset('js/main.js') }}"></script>

    <!-- Custom JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Smooth scroll for nav links
            document.querySelectorAll('.nav-link').forEach(link => {
                link.addEventListener('click', function(e) {
                    if (this.getAttribute('href').startsWith('#')) {
                        e.preventDefault();
                        const target = document.querySelector(this.getAttribute('href'));
                        target.scrollIntoView({ behavior: 'smooth' });
                    }
                });
            });

            // Animation des boutons au survol
            const buttons = document.querySelectorAll('.btn');
            buttons.forEach(button => {
                button.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-3px)';
                });
                button.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });

            // Focus sur le champ de recherche
            const searchInput = document.querySelector('.form-control');
            if (searchInput) {
                searchInput.focus();
            }
        });
    </script>
</body>
</html>
{% endblock %}
