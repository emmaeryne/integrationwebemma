<div class="btn-group btn-group-sm">
    <a href="{{ path('admin_order_show', {'id': order.id}) }}" class="btn btn-info" title="Voir">
        <i class="fas fa-eye"></i>
    </a>
    <a href="{{ path('admin_order_edit', {'id': order.id}) }}" class="btn btn-primary" title="Modifier">
        <i class="fas fa-edit"></i>
    </a>
    <form action="{{ path('admin_order_delete', {'id': order.id}) }}" method="post" class="d-inline">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
        <button type="submit" class="btn btn-danger" title="Supprimer" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette commande ?')">
            <i class="fas fa-trash"></i>
        </button>
    </form>
</div>