<form method="post" action="{{ path('admin_carrier_delete', {'id': carrier.id}) }}" 
      onsubmit="return confirm('Are you sure you want to delete this carrier? This action cannot be undone.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ carrier.id) }}">
    <button class="btn btn-danger rounded-pill px-4 shadow-sm">
        <i class="bi bi-trash me-1"></i> Delete Carrier
    </button>
</form>

<style>
    .btn-danger {
        background-color: #e74c3c;
        border-color: #e74c3c;
        transition: all 0.3s;
    }
    .btn-danger:hover {
        background-color: #c0392b;
        border-color: #c0392b;
        transform: translateY(-1px);
    }
</style>