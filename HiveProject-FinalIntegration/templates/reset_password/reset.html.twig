{% extends 'registration/base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary: #0066cc;
            --primary-light: #3385d6;
            --primary-dark: #004d99;
            --accent: #00aaff;
        }

        .login-container {
            min-height: 100vh;
            background: linear-gradient(135deg, rgba(0, 25, 51, 0.9), rgba(0, 102, 204, 0.7)),
                        url('{{ asset('img/carousel-1.jpg') }}') center/cover fixed;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .login-card {
            background: rgba(17, 25, 40, 0.75);
            backdrop-filter: blur(12px);
            border-radius: 24px;
            padding: 3rem;
            width: 100%;
            max-width: 500px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            position: relative;
            overflow: hidden;
        }

        .login-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary), var(--accent));
        }

        .login-title {
            color: #ffffff;
            font-size: 2.5rem;
            text-align: center;
            margin-bottom: 2rem;
            font-weight: 700;
            letter-spacing: 1px;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            color: #ffffff !important;
            font-size: 1.1rem;
            font-weight: 500;
            margin-bottom: 0.75rem;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.08);
            border: 2px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 1rem;
            color: #ffffff;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.12);
            border-color: var(--primary);
            box-shadow: 0 0 15px rgba(0, 102, 204, 0.3);
            transform: translateY(-2px);
        }

        .btn-login {
            background: linear-gradient(45deg, var(--primary), var(--accent));
            color: white;
            border: none;
            border-radius: 12px;
            padding: 1rem;
            font-weight: 600;
            width: 100%;
            font-size: 1.1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0, 102, 204, 0.4);
        }

        .btn-login::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(
                to right,
                rgba(255, 255, 255, 0),
                rgba(255, 255, 255, 0.3),
                rgba(255, 255, 255, 0)
            );
            transform: rotate(45deg);
            transition: 0.5s;
            opacity: 0;
        }

        .btn-login:hover::after {
            animation: shine 1.5s ease;
        }

        @keyframes shine {
            0% {
                opacity: 0;
                transform: translateX(-100%) rotate(45deg);
            }
            50% {
                opacity: 1;
            }
            100% {
                opacity: 0;
                transform: translateX(100%) rotate(45deg);
            }
        }

        .text-center a {
            color: var(--accent);
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            position: relative;
            padding-bottom: 2px;
        }

        .text-center a::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 2px;
            background: var(--accent);
            transition: width 0.3s ease;
        }

        .text-center a:hover::after {
            width: 100%;
        }

        .invalid-feedback {
            color: #ff4d4d;
            font-size: 0.875rem;
            margin-top: 0.5rem;
        }

        @media (max-width: 576px) {
            .login-card {
                padding: 2rem;
            }
            
            .login-title {
                font-size: 2rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="login-container">
        <div class="container">
            <div class="login-card">
                <h1 class="login-title">Reset Password</h1>

                {{ form_start(resetForm) }}
                    <div class="form-group">
                        {{ form_label(resetForm.plainPassword, 'New Password', {'label_attr': {'class': 'form-label text-light'}}) }}
                        {{ form_widget(resetForm.plainPassword, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Enter your new password'
                            }
                        }) }}
                        <div class="invalid-feedback">
                            {{ form_errors(resetForm.plainPassword) }}
                        </div>
                    </div>

                    <button class="btn btn-login mt-3">Reset Password</button>
                {{ form_end(resetForm) }}

                <div class="text-center mt-4">
                    <a href="{{ path('app_user_login') }}" class="text-primary">Back to login</a>
                </div>
            </div>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Success',
                text: '{{ message|e('js') }}',
                confirmButtonText: 'OK'
            });
        </script>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: '{{ message|e('js') }}',
                confirmButtonText: 'OK'
            });
        </script>
    {% endfor %}
{% endblock %}