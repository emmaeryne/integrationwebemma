            // Réinitialisation
            document.getElementById('btn-generer').classList.add('hidden');
            document.getElementById('desc-block').classList.add('hidden');
            preview.style.display = 'none';
            preview.src = '';

            if (!imageFile || !nomCategorie) {
                Swal.fire({
                    title: "Champs manquants",
                    text: "Remplis le nom de la catégorie et choisis une image.",
                    icon: "warning",
                    confirmButtonColor: "#3498db"
                });
                return;
            }

            const reader = new FileReader();
            reader.onloadend = function () {
                const base64Image = reader.result.split(',')[1];

                preview.src = reader.result;
                preview.style.display = 'block';

                // Validation IA
                fetch('https://127.0.0.1:5001/validate_category', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ nomCategorie, imageBase64: base64Image })
                })
                .then(res => res.json())
                .then(data => {
                    if (data.valid) {
                        document.getElementById('btn-generer').classList.remove('hidden');
                        document.getElementById('desc-block').classList.remove('hidden');
                        Swal.fire({
                            title: "✅ Image validée",
                            text: "Tu peux maintenant générer la description.",
                            icon: "success",
                            confirmButtonColor: "#3498db"
                        });
                    } else {
                        preview.src = '';
                        preview.style.display = 'none';
                        Swal.fire({
                            title: "❌ Image invalide",
                            text: "L'image ne correspond pas au nom de catégorie.",
                            icon: "error",
                            confirmButtonColor: "#3498db"
                        });
                    }
                })
                .catch(err => {
                    console.error(err);
                    preview.src = '';
                    preview.style.display = 'none';
                    Swal.fire({
                        title: "Erreur",
                        text: "Impossible de valider l'image.",
                        icon: "error",
                        confirmButtonColor: "#3498db"
                    });
                });
            };

            reader.readAsDataURL(imageFile);
        }

        function genererDescription() {
            const nomCategorie = document.getElementById('categorie_produit_nomcategorie').value.trim();
            const imageInput = document.getElementById('categorie_produit_image');
            const imageFile = imageInput.files[0];

            if (!nomCategorie || !imageFile) {
                Swal.fire({
                    title: "Erreur",
                    text: "Remplis le nom de la catégorie et choisis une image.",
                    icon: "error",
                    confirmButtonColor: "#3498db"
                });
                return;
            }

            const reader = new FileReader();
            reader.onloadend = function () {
                const base64Image = reader.result.split(',')[1];

                fetch('https://127.0.0.1:5002/generate_caption', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ nomCategorie, imageBase64: base64Image })
                })
                .then(res => res.json())
                .then(data => {
                    if (data.description) {
                        document.getElementById('categorie_produit_description').value = data.description;
                        Swal.fire({
                            title: "📝 Description générée",
                            text: "Contenu rempli automatiquement !",
                            icon: "success",
                            confirmButtonColor: "#3498db"
                        });
                    } else {
                        throw new Error("Pas de description reçue");
                    }
                })
                .catch(err => {
                    console.error(err);
                    Swal.fire({
                        title: "Erreur IA",
                        text: "Impossible de générer la description.",
                        icon: "error",
                        confirmButtonColor: "#3498db"
                    });
                });
            };

            reader.readAsDataURL(imageFile);
        }

        function traduireDescription() {
            const texte = document.getElementById('categorie_produit_description').value.trim();
            const langue = document.getElementById('langue-select').value;

            if (!texte) {
                Swal.fire({
                    title: "Erreur",
                    text: "La description est vide.",
                    icon: "error",
                    confirmButtonColor: "#3498db"
                });
                return;
            }

            fetch('https://127.0.0.1:5003/translate', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ texte, source: "fr", cible: langue })
            })
            .then(res => res.json())
            .then(data => {
                if (data.traduction) {
                    document.getElementById('categorie_produit_description').value = data.traduction;
                    Swal.fire({
                        title: "🌍 Traduction réussie",
                        text: "Texte traduit avec succès",
                        icon: "success",
                        confirmButtonColor: "#3498db"
                    });
                } else {
                    throw new Error("Erreur dans la réponse");
                }
            })
            .catch(err => {
                console.error(err);
                Swal.fire({
                    title: "Erreur",
                    text: "Impossible de traduire la description.",
                    icon: "error",
                    confirmButtonColor: "#3498db"
                });
            });
        }
    </script>
