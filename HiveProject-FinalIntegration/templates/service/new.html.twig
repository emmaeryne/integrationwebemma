                const regex = /^[a-zA-Z√Ä-√ø0-9\s]+$/;
                const group = nomInput.closest('.form-group');
                const errorMessage = group.querySelector('.error-message');
                if (!regex.test(nomInput.value) && nomInput.value !== '') {
                    group.classList.add('has-error');
                    group.classList.remove('has-success');
                    nomInput.classList.add('is-invalid');
                    errorMessage.textContent = 'Le nom du service ne doit contenir que des lettres, des chiffres et des espaces.';
                } else if (nomInput.value.length < 3 && nomInput.value !== '') {
                    group.classList.add('has-error');
                    group.classList.remove('has-success');
                    nomInput.classList.add('is-invalid');
                    errorMessage.textContent = 'Le nom doit contenir au moins 3 caract√®res.';
                } else if (nomInput.value !== '') {
                    group.classList.remove('has-error');
                    group.classList.add('has-success');
                    nomInput.classList.remove('is-invalid');
                    nomInput.classList.add('is-valid');
                    errorMessage.textContent = '';
                }
            });

